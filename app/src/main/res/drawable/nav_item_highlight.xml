<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Selected item: Show underline -->
    <item android:state_checked="true">
        <layer-list>
            <item android:left="0dp" android:right="0dp" android:bottom="0dp">
                <shape android:shape="rectangle">
                    <solid android:color="@android:color/transparent"/>
                </shape>
            </item>
            <item android:height="4dp" android:gravity="bottom">
                <shape android:shape="rectangle">
                    <solid android:color="@color/AppBrown"/> <!-- Change to match your theme -->
                </shape>
            </item>
        </layer-list>
    </item>

    <!-- Default state (No underline) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/>
        </shape>
    </item>
</selector>
